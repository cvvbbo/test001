<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/pj_num_tv"
        android:text="项目编码:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:text="1234567"
        android:layout_toRightOf="@+id/pj_num_tv"
        android:id="@+id/project_num_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/project_name"
        android:layout_below="@+id/pj_num_tv"
        android:text="项目名称："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_below="@+id/pj_num_tv"
        android:layout_marginLeft="20dp"
        android:text="项目1"
        android:layout_toRightOf="@+id/pj_num_tv"
        android:id="@+id/pj_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/pj_name_tv"
        android:text="操作时间："
        android:id="@+id/operator_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/pj_name_tv"
        android:layout_marginLeft="20dp"
        android:text="2020"
        android:layout_toRightOf="@+id/pj_num_tv"
        android:id="@+id/operator_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_below="@+id/operator_time"
        android:id="@+id/operator_name"
        android:text="操作人："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:background="@null"
        android:layout_toRightOf="@+id/operator_name"
        android:layout_below="@+id/operator_time"
        android:id="@+id/operator_name_ed"
        android:layout_width="100dp"
        android:layout_height="25dp"/>

    <TextView
        android:layout_below="@+id/operator_name"
        android:id="@+id/rectification_name"
        android:text="整改人："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:background="@null"
        android:layout_toRightOf="@+id/operator_name"
        android:layout_below="@+id/operator_name"
        android:id="@+id/rectification_name_ed"
        android:layout_width="100dp"
        android:layout_height="25dp"/>


    <TextView
        android:layout_below="@+id/rectification_name"
        android:id="@+id/check_name"
        android:text="审核人："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:background="@null"
        android:layout_toRightOf="@+id/operator_name"
        android:layout_below="@+id/rectification_name"
        android:id="@+id/check_name_ed"
        android:layout_width="100dp"
        android:layout_height="25dp"/>


    <TextView
        android:id="@+id/is_issue"
        android:layout_below="@+id/check_name_ed"
        android:text="是否有问题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/issue_sw"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/is_issue"
        android:layout_below="@+id/check_name_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/issue_sw"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <Button
        android:text="拍照/相册"
        android:layout_below="@+id/image"
        android:id="@+id/select_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>